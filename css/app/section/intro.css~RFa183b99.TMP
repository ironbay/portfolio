
.intro-section {background: white;}

.intro-section .bubbles {
    margin: 45px auto;
    position: relative;
    z-index: 100;
}

.intro-section .bubble {
    width: 33%;
    float: left;
    padding: 0px 25px;
    transition: all 1s cubic-bezier(.165,.84,.44,1);
    opacity: 0;
    transform: translate3d(0px, 100px, 0px);
    background: white;
    padding-bottom: 0px;
    position: relative;
}

.intro-section .bubble .line {
    position: absolute;
    left: 50%;
    margin-left: -1px;
    height: 100%;
    background: #BCBCBC;
    width: 2px;
    z-index: -100;
    transition: all 0.5s linear;
}

.intro-section.active .bubble .line {
    transform: translate3d(0, 100%, 0);
}

.intro-section .bubble .wrap {
    padding-bottom: 100%;
    border-radius: 100%;
    border: 2px solid #BCBCBC;
    background: white;
    background-size: 100px;
    background-position: center;
    background-repeat: no-repeat;
}

.intro-section .bubble .wrap img {
    width: 100px;
    position: absolute;
    margin: auto;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    opacity: 0;
    transition: all 200ms linear;
}

.intro-section.active .bubble .wrap img {opacity: 1;}

.intro-section .bubble:nth-child(1) {-webkit-transition-delay: 0.3s;}
.intro-section .bubble:nth-child(1) * {-webkit-transition-delay: 1s !important;}

.intro-section .bubble:nth-child(2) {-webkit-transition-delay: 0.4s;}
.intro-section .bubble:nth-child(2) * {-webkit-transition-delay: 1.3s !important;}

.intro-section .bubble:nth-child(3) {-webkit-transition-delay: 0.5s;}
.intro-section .bubble:nth-child(3) * {-webkit-transition-delay: 1.6s !important;}

.intro-section.active .bubble {
    transform: translate3d(0px, 0px, 0px);
    opacity: 1;
}

